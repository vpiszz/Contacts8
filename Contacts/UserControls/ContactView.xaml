<UserControl x:Class="Contacts.UserControls.ContactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Contacts.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel
            Margin="5"
            Orientation="Horizontal">
            <TextBlock 
                Margin="5 10"
                Name="nameTextBlock" 
                Foreground="LightPink"
                FontWeight="Heavy"/>
            <TextBlock 
                Margin="5 10"
                Name="phoneTextBlock" 
                Foreground="Pink"
                FontWeight="Heavy"/>

            <TextBlock 
                Margin="5 10"
                Name="emailTextBlock" 
                Foreground="Purple" 
                FontWeight="Heavy"/>
        </StackPanel>
    </Grid>
</UserControl>
